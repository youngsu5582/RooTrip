{
  "name": "roo-trip",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --entryFile ./application --build --watch",
    "start:dev": "docker-compose -f docker/docker-compose.develop.yml up -d --build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "format-check": "prettier --check --ignore-path .gitignore \"src/**/*.+(ts|json|js)\"",

    "test": "jest",
    "test:all": "sleep 1 && dotenv -e .env.test -- npx prisma migrate deploy && jest --runInBand --forceExit",
    "docker-compose-up:test": "docker-compose -f docker/docker-compose.test.yml --env-file .env.test up --remove-orphans -d",
    "docker-compose-down:test": "docker-compose -f docker/docker-compose.test.yml down -v",
    "test:ci": "npm run docker-compose-up:test && npm run test:all; npm run docker-compose-down:test",
    "test:watch": "sleep 1 && dotenv -e .env.test -- npx prisma migrate deploy && jest --watch",
    "cov": "open coverage/lcov-report/index.html",
    "test:cov": "sleep 1 && dotenv -e .env.test -- npx prisma migrate deploy && jest --coverage",



    "test:ci-cov": "npm run docker-compose-up:test && npm run test:cov; npm run docker-compose-down:test",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "ts-patch install && typia patch"
  },
  "dependencies": {
    "@nestia/core": "^2.4.4",
    "@nestia/e2e": "^0.4.0",
    "@nestjs-library/config": "^0.4.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@sentry/node": "^7.91.0",
    "axios": "^1.6.2",
    "cls-rtracer": "^2.6.3",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "lint-staged": "^15.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typia": "^5.3.9"
  },
  "devDependencies": {
    "@nestia/sdk": "^2.4.4",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nestia": "^5.1.2",
    "prettier": "^2.8.8",
    "prisma": "^5.7.0",
    "prisma-markdown": "^1.0.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "schema": "src/schema.prisma"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
